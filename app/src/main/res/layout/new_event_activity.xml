<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Title"
                android:ems="10"
                android:id="@+id/new_event_title" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:inputType="textPersonName"
                android:hint="Description"
                android:gravity="top"
                android:ems="10"
                android:id="@+id/new_event_description"
                />
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/new_event_picture"/>

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/new_event_info" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right">


                <ImageButton
                    android:text="Button"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:id="@+id/new_event_picture_button"
                    android:src="@drawable/ic_menu_camera"
                    android:background="@null"/>

                <ImageButton
                    android:text="Button"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:id="@+id/new_event_location"
                    android:src="@drawable/ic_menu_camera"
                    android:background="@null"/>

                <ImageButton
                    android:text="Button"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:id="@+id/new_event_date"
                    android:src="@drawable/ic_menu_camera"
                    android:background="@null"/>

                <ImageButton
                    android:text="Button"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:id="@+id/new_event_complete"
                    android:src="@drawable/ic_menu_camera"
                    android:background="@null"/>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>